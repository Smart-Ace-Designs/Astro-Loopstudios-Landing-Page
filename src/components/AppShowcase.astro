---
import AppShowcaseCard from "./AppShowcaseCard.astro";

import creations from "@/data/showcase.json";
---

<section class="md:mt-6">
  <div class="mx-auto max-w-[1440px] px-6 lg:px-40">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 xl:grid-cols-4">
      <h2
        class="font-josefinsans text-theme-black pb-4 text-center text-3xl uppercase sm:text-left md:pb-10 md:text-4xl xl:col-span-2 xl:text-5xl"
      >
        Our Creations
      </h2>
      <a
        href="/"
        class="font-alata text-theme-black bg-theme-white border-theme-black/50 text-md order-last self-start justify-self-center border-2 px-10 py-2 tracking-[.3em] uppercase sm:order-none sm:justify-self-end xl:col-span-2"
        >See all</a
      >
      {
        creations.map((creation) => (
          <AppShowcaseCard
            imageDesktop={creation.imageDesktop}
            imageMobile={creation.imageMobile}
            title={creation.title}
          />
        ))
      }
    </div>
  </div>
</section>
