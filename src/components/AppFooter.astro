---
import AppLogo from "./AppLogo.astro";
import AppFooterNav from "./AppFooterNav.astro";
import AppFooterSocial from "./AppFooterSocial.astro";
---

<footer class="bg-theme-black text-theme-white mt-24 h-fit py-12 md:mt-44 md:py-8">
  <div
    class="mx-auto flex max-w-[1440px] flex-col items-center justify-between px-6 py-3 md:flex-row lg:px-40"
  >
    <div class="flex flex-col items-center gap-8 md:gap-6">
      <AppLogo classes="h-6 w-35 self-start" />
      <AppFooterNav />
    </div>
    <div class="mt-12 flex w-full flex-col gap-6 md:mt-0">
      <AppFooterSocial />
      <p
        class="font-alata text-theme-grey/50 md:text-md self-center text-base md:self-end"
        id="footer-copyright"
        aria-live="polite"
        aria-atomic="true"
      >
      </p>
    </div>
  </div>
</footer>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const footerCopyright = document.getElementById("footer-copyright");
    const currentYear: number = new Date().getFullYear();
    if (footerCopyright)
      footerCopyright.innerHTML = `&copy; ${currentYear} Loopstudios. All rights reserved.`;
  });
</script>
