---
import navLinks from "@/data/navitems.json";
---

<nav>
  <ul
    class="font-alata text-md flex flex-col gap-4 text-center tracking-wide md:flex-row md:gap-8 md:text-left"
  >
    {
      navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="hover:border-theme-white border-b-2 border-transparent pb-2 transition-colors duration-300"
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
